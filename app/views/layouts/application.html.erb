<!DOCTYPE html>
<html>
<head>
  <title>DASTConsulting</title>
  <!--[if lt IE 9]>
  	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"
  	type="text/javascript"></script>
  	<!end-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %> 
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="/locations">DAST Consulting</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to "Houses", "/houses" %></li>
            <li><%= link_to "Home" %></li>
            <li><%= link_to "Help" %></li>
            <%if current_user%>
            	<li><%= button_to 'Sign out', destroy_user_session_path, method: :delete%>
            <%else%>
            	<li><%= link_to 'Sign in', new_user_session_path%>
            <%end%>	
          </ul>
        </div>
      </div>
    </div>
  </div>

<div class="container">
	<div class="row">
    <div class="span9"><%= yield %></div>
    <div class="span3">
      <%if current_user%>
        <right><%= form_tag(:controller => "locations", :action => "houses", :method => "get") do %>
        <%= label_tag(:search, "Search for:") %>
        <%= text_field_tag(:search) %>
        <%= submit_tag("Search") %></right>
      <%end%>  
<% end %>
</div>
  </div>  
</div>  

<%= yield :scripts %>
</body>  
</html>
